// ────────────────────────────── Input ──────────────────────────────
input {
    keyboard {
        xkb {
            layout "us"
            options "grp:alt_shift_toggle"
        }
        numlock
    }

    touchpad {
        tap
    }

    mouse {
        accel-profile "flat"
        accel-speed 0.4
    }
}

// ────────────────────────────── Layout & Appearance ──────────────────────────────
layout {
    gaps 8
    center-focused-column "never"

    focus-ring {
        width 2
        active-color "#988BA2"
        inactive-color "#444444"
    }

    shadow {
        on
        softness 30
        spread 5
        offset x=0 y=5
        color "#0007"
    }

    border {
        off
    }
}

animations {
    slowdown 1.0
}

// ──────────────────────────── Environment ────────────────────────────
// Stylix already handles most theming.
// Keep only the things that matter for Wayland apps behaving correctly.
environment {
    CLUTTER_BACKEND "wayland"
    ELECTRON_OZONE_PLATFORM_HINT "wayland"

    XDG_SESSION_TYPE "wayland"
    XDG_CURRENT_DESKTOP "niri"
    XDG_SESSION_DESKTOP "niri"
}

prefer-no-csd
screenshot-path "~/Pictures/Screenshots/Screenshot %Y-%m-%d_%H-%M-%S.png"

// ────────────────────────────── Rules ──────────────────────────────
window-rule {
    geometry-corner-radius 8
    clip-to-geometry true
}

window-rule {
    match app-id="firefox" title="^Picture-in-Picture$"
    open-floating true
}

window-rule {
    match app-id="mpv"
    open-on-output "DP-1"
    open-focused false
    open-maximized true
}

window-rule {
    match app-id="discord"
    open-on-output "HDMI-A-1"
    open-on-workspace "3"
    open-maximized true
}

window-rule {
    match app-id="Spotify"
    open-on-output "HDMI-A-1"
    open-on-workspace "5"
    open-maximized true
}

// ────────────────────────────── Binds ──────────────────────────────
binds {
    // ───── Launchers ─────
    Mod+T { spawn "kitty"; }
    Mod+E { spawn "nautilus"; }
    Mod+W { spawn "firefox"; }
    Mod+O { spawn "obsidian"; }

    // Spotlight launcher (replaces fuzzel)
    Mod+R { spawn "dms" "ipc" "call" "spotlight" "toggle"; }

    // Control Center
    Mod+S { spawn "dms" "ipc" "call" "control-center" "toggle"; }

    // Dashboard
    Mod+Shift+D { spawn "dms" "ipc" "call" "dash" "toggle"; }

    // Settings
    Mod+Comma { spawn "dms" "ipc" "call" "settings" "toggle"; }

    // Clipboard
    Mod+V { spawn "dms" "ipc" "call" "clipboard" "toggle"; }

    // Notifications
    Mod+N { spawn "dms" "ipc" "call" "notifications" "toggle"; }

    // Notepad scratchpad
    Mod+Shift+N { spawn "dms" "ipc" "call" "notepad" "toggle"; }

    // Lock (DMS)
    Mod+L { spawn "dms" "ipc" "call" "lock" "lock"; }

    // Power menu
    Ctrl+Alt+Delete { spawn "dms" "ipc" "call" "powermenu" "toggle"; }

    // ───── Window actions ─────
    Mod+Q { close-window; }
    Alt+F4 { close-window; }

    Mod+F { fullscreen-window; }
    Mod+D { maximize-column; }
    Mod+Space { toggle-window-floating; }

    Mod+Shift+Q { quit; }

    // ───── Focus navigation ─────
    Mod+WheelScrollUp { focus-column-left; }
    Mod+WheelScrollDown { focus-column-right; }

    // ───── Move windows/columns ─────
    Mod+Shift+Left { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Down { move-window-down; }
    Mod+Shift+Up { move-window-up; }

    // ───── Workspaces 1..10 ─────
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+0 { focus-workspace 10; }

    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }
    Mod+Ctrl+0 { move-column-to-workspace 10; }

    // Overview
    Mod+Tab { toggle-overview; }

    // ───── Resizing ─────
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    // Centering
    Mod+C { center-column; }
    Mod+Ctrl+C { center-visible-columns; }

    // ───── Screenshots (use DMS integration for Niri 25.11+) ─────
    Print { spawn "dms" "ipc" "call" "niri" "screenshot"; }
    Ctrl+Print { spawn "dms" "ipc" "call" "niri" "screenshotScreen"; }
    Alt+Print { spawn "dms" "ipc" "call" "niri" "screenshotWindow"; }

    // ───── Media / Volume (DMS OSD) ─────
    XF86AudioRaiseVolume { spawn "dms" "ipc" "call" "audio" "increment" "5"; }
    XF86AudioLowerVolume { spawn "dms" "ipc" "call" "audio" "decrement" "5"; }
    XF86AudioMute { spawn "dms" "ipc" "call" "audio" "mute"; }
    XF86AudioMicMute { spawn "dms" "ipc" "call" "audio" "micmute"; }

    XF86AudioNext { spawn "dms" "ipc" "call" "mpris" "next"; }
    XF86AudioPrev { spawn "dms" "ipc" "call" "mpris" "previous"; }
    XF86AudioPlay { spawn "dms" "ipc" "call" "mpris" "playPause"; }

    // Brightness (DMS)
    XF86MonBrightnessUp { spawn "dms" "ipc" "call" "brightness" "increment" "10"; }
    XF86MonBrightnessDown { spawn "dms" "ipc" "call" "brightness" "decrement" "10"; }

    // ───── Nice extras ─────
    // Toggle night mode
    Mod+Shift+L { spawn "dms" "ipc" "call" "night" "toggle"; }

    // Toggle Do Not Disturb
    Mod+Shift+M { spawn "dms" "ipc" "call" "notifications" "toggleDoNotDisturb"; }

    // Toggle dock
    Mod+Alt+D { spawn "dms" "ipc" "call" "dock" "toggle"; }
}
